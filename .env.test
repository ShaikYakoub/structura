# Test Environment Variables
# Copy this file to .env.test.local for your local test environment

# Test Database (separate from production/development)
# IMPORTANT: Use a separate database for tests to avoid data loss
DATABASE_TEST_URL=postgresql://structura:structura_dev_password@localhost:5432/structura_test

# All other environment variables (same as .env)
DATABASE_URL=postgresql://structura:structura_dev_password@localhost:5432/structura_test
NODE_ENV=test
NEXT_PUBLIC_APP_URL=http://localhost:3000
AUTH_SECRET=test-secret-key-for-testing-only
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=test-secret-key-for-testing-only
NEXT_PUBLIC_APP_DOMAIN=localhost:3000
NEXT_PUBLIC_APP_PROTOCOL=http
NEXT_PUBLIC_SITES_DOMAIN=localhost:3000
SUPER_ADMIN_EMAIL=admin@structura.com

# Sentry (disable in tests)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Optional: Mock services for tests
# You can use these to avoid hitting real APIs during tests
SKIP_EXTERNAL_SERVICES=true
