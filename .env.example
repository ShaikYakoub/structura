# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://postgres:password@localhost:5432/structura
DATABASE_URL=postgresql://user:password@localhost:5432/structura

# ============================================
# AUTHENTICATION (NextAuth)
# ============================================
# Secret key for encrypting session tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-super-secret-key-change-in-production

# Base URL of your application (used for OAuth callbacks)
# Development: http://localhost:3000
# Production: https://structura.com
NEXTAUTH_URL=http://localhost:3000

# Google OAuth credentials (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# STORAGE (DigitalOcean Spaces)
# ============================================
# Your Spaces bucket name
DO_SPACES_BUCKET=structura-assets

# CDN URL for serving assets (improves performance)
# Example: https://structura-assets.fra1.cdn.digitaloceanspaces.com
DO_SPACES_CDN=https://your-bucket.region.cdn.digitaloceanspaces.com

# Spaces API endpoint (region-specific)
# Example: https://fra1.digitaloceanspaces.com
DO_SPACES_ENDPOINT=https://region.digitaloceanspaces.com

# Spaces access key (get from DigitalOcean dashboard)
DO_SPACES_KEY=your-spaces-access-key

# Spaces secret key (get from DigitalOcean dashboard)
DO_SPACES_SECRET=your-spaces-secret-key

# ============================================
# PAYMENTS (Razorpay)
# ============================================
# Razorpay Key ID (get from https://dashboard.razorpay.com)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxx

# Razorpay Key Secret (keep this secret!)
RAZORPAY_KEY_SECRET=your-razorpay-secret-key

# Webhook secret for verifying Razorpay webhooks
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Razorpay Plan ID for Pro subscription
# Create this plan in Razorpay dashboard
RAZORPAY_PLAN_ID=plan_xxxxxxxxxxxxxx

# ============================================
# EMAIL (Resend)
# ============================================
# Resend API Key (get from https://resend.com/api-keys)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# From email address (must be verified in Resend)
# Example: noreply@structura.com
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# ERROR TRACKING (Sentry)
# ============================================
# Sentry DSN (get from https://sentry.io)
# This is public and safe to expose in client-side code
NEXT_PUBLIC_SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/123456

# Sentry auth token for uploading source maps (only needed for production builds)
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ============================================
# APP CONFIGURATION
# ============================================
# Root domain where your app is hosted (NO protocol, NO trailing slash)
# Development: localhost:3000
# Production: structura.com or shaikyakoub.com
NEXT_PUBLIC_APP_DOMAIN=localhost:3000

# Protocol for your app (http in dev, https in prod)
NEXT_PUBLIC_APP_PROTOCOL=http

# Full app URL (combination of protocol + domain)
# Development: http://localhost:3000
# Production: https://structura.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Super admin email (ONLY this email can access /admin)
# This is hardcoded for security - change to your email
SUPER_ADMIN_EMAIL=your@email.com

# Node environment (development, production, test)
NODE_ENV=development

# ============================================
# OPTIONAL: MULTI-TENANT DOMAINS
# ============================================
# Primary domain for user sites (used for subdomains)
# Example: If set to "shaikyakoub.com", user sites will be at user.shaikyakoub.com
NEXT_PUBLIC_SITES_DOMAIN=localhost:3000


