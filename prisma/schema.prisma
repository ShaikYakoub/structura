generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid()) @db.Uuid
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  tenantId      String?   @db.Uuid
  
  // Razorpay Subscription Fields
  razorpayCustomerId      String?
  razorpaySubscriptionId  String?   @unique
  razorpayPlanId          String?
  razorpayCurrentPeriodEnd DateTime?
  isPro                   Boolean   @default(false)
  
  // Admin & Moderation
  bannedAt      DateTime?
  banReason     String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  tenant        Tenant?   @relation(fields: [tenantId], references: [id])

  @@index([email])
  @@index([razorpayCustomerId])
  @@index([razorpaySubscriptionId])
  @@index([bannedAt])
}

model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Tenant {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  email     String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sites     Site[]
  users     User[]

  @@index([slug])
  @@index([email])
}

model Site {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  subdomain    String   @unique
  customDomain String?  @unique
  logo         String?
  navColor     String   @default("#ffffff")
  navigation   Json     @default("[]")
  styles       Json     @default("{\"primary\":\"#000000\",\"background\":\"#ffffff\",\"foreground\":\"#000000\",\"muted\":\"#f1f5f9\",\"mutedForeground\":\"#64748b\",\"fontHeading\":\"Inter\",\"fontBody\":\"Inter\",\"radius\":\"0.5\"}")
  tenantId     String   @db.Uuid
  isPublished  Boolean  @default(false)
  
  // Template Fields
  isTemplate          Boolean  @default(false)
  templateCategory    String?
  templateDescription String?
  thumbnailUrl        String?
  
  // Custom Code Injection
  customHeadCode      String?
  customBodyCode      String?
  cookieBannerEnabled Boolean  @default(true)
  
  // Moderation
  banned       Boolean   @default(false)
  bannedAt     DateTime?
  banReason    String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  description  String?
  pages        Page[]
  analytics    SiteAnalytics[]
  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([subdomain])
  @@index([customDomain])
  @@index([tenantId])
  @@index([isTemplate])
  @@index([templateCategory])
  @@index([banned])
}

model Page {
  id               String    @id @default(uuid()) @db.Uuid
  name             String
  slug             String
  path             String
  draftContent     Json      @default("[]")
  publishedContent Json?
  lastPublishedAt  DateTime?
  siteId           String    @db.Uuid
  isPublished      Boolean   @default(false)
  isHomePage       Boolean   @default(false)
  
  // SEO Fields
  seoTitle         String?
  seoDescription   String?
  seoKeywords      String?
  seoImage         String?
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  site             Site      @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@unique([siteId, slug])
  @@index([siteId])
  @@index([siteId, isHomePage])
}

model SiteAnalytics {
  id        String   @id @default(cuid())
  siteId    String   @db.Uuid
  date      DateTime @db.Date
  path      String
  views     Int      @default(1)
  createdAt DateTime @default(now())
  
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  
  @@unique([siteId, date, path])
  @@index([siteId, date])
  @@index([siteId])
}

model AuditLog {
  id          String   @id @default(cuid())
  adminEmail  String
  action      String
  targetId    String
  targetType  String
  metadata    Json?
  createdAt   DateTime @default(now())
  
  @@index([adminEmail])
  @@index([targetId])
  @@index([createdAt])
}
